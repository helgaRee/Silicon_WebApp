@model AccountDetailsViewModel

@{
    // Layout = "_AccountLayout";
    ViewData["Title"] = "Account Details";
}

<section class="account-details">
    <div class="container">

        @if (!string.IsNullOrEmpty(TempData["StatusMessage"]?.ToString()))
        {
            <div class="error-message alert alert-danger">
                @TempData["StatusMessage"]
            </div>
        }

        <aside>
            <partial name="~/Views/Account/_ProfileInfo.cshtml" />
        </aside>


        

        <div class="account-information">
            <h1>Account Details</h1>

            <form id="basicInfoForm" method="post" asp-action="UpdateBasicInfo" asp-controller="Account" novalidate>
                <h5>Basic Info</h5>

                <div class="form-content">
                    <div id="firstname" class="input-group">
                        <label asp-for="BasicInfo!.FirstName"></label>
                        <input id="firstName" required onkeyup="validateFormField(this)" type="text" asp-for="BasicInfo!.FirstName" />
                        <span id="firstName-error" asp-validation-for="BasicInfo!.FirstName"></span>
                    </div>
                    <div id="lastname" class="input-group">
                        <label asp-for="BasicInfo!.LastName"></label>
                        <input id="lastName" required onkeyup="validateFormField(this)" type="text" asp-for="BasicInfo!.LastName" />
                        <span id="lastName-error" asp-validation-for="BasicInfo!.LastName"></span>
                    </div>
                    <div id="email" class="input-group">
                        <label asp-for="BasicInfo!.Email"></label>
                        <input id="email-details" required onkeyup="validateFormField(this)" type="email" asp-for="BasicInfo!.Email" />
                        <span id="email-error" asp-validation-for="BasicInfo!.Email"></span>
                    </div>
                    <div id="phone" class="input-group">
                        <label asp-for="BasicInfo!.PhoneNumber"></label>
                        <input id="phoneNumber" required onkeyup="validateFormField(this)" type="tel" asp-for="BasicInfo!.PhoneNumber" />
                        <span id="phoneNumber-error" asp-validation-for="BasicInfo!.PhoneNumber"></span>
                    </div>
                    <div id="biography" class="input-group">
                        <label asp-for="BasicInfo!.Biography"></label>
                        <textarea asp-for="BasicInfo!.Biography"></textarea>
                        <span asp-validation-for="BasicInfo!.Biography"></span>
                    </div>

                </div>
                <div class="details-buttons">
                    <button id="btn-cancel" type="reset" class="btn btn-gray">Cancel</button>
                    <button id="btn-submit" type="submit" class="btn btn-theme-s">Save changes</button>
                </div>
            </form>


            <form id="addressInfoForm" method="post" asp-action="UpdateAddressInfo" asp-controller="Account" novalidate>
                <h5>Address Info</h5>
                <div class="form-content">
                    <div id="address-line-1" class="input-group">
                        <label asp-for="AddressInfo!.AddressLine_1"></label>
                        <input id="addressLine_1" required onkeyup="validateFormField(this)" type="text" asp-for="AddressInfo!.AddressLine_1" />
                        <span id="addressLine_1_error" asp-validation-for="AddressInfo!.AddressLine_1"></span>
                    </div>
                    <div id="address-line-2" class="input-group">
                        <label asp-for="AddressInfo!.AddressLine_2"></label>
                        <input id="addressLine_2" onkeyup="validateFormField(this)" type="text" asp-for="AddressInfo!.AddressLine_2" />
                        <span id="addressLine_2_error" asp-validation-for="AddressInfo!.AddressLine_2"></span>
                    </div>
                    <div id="postalcode" class="input-group">
                        <label asp-for="AddressInfo!.PostalCode"></label>
                        <input id="postalCode" required onkeyup="validateFormField(this)" type="number" asp-for="AddressInfo!.PostalCode" />
                        <span id="postalCode_error" asp-validation-for="AddressInfo!.PostalCode"></span>
                    </div>
                    <div id="city" class="input-group">
                        <label asp-for="AddressInfo!.City"></label>
                        <input id="city" required onkeyup="validateFormField(this)" type="text" asp-for="AddressInfo!.City" />
                        <span id="city_error" asp-validation-for="AddressInfo!.City"></span>
                    </div>
                </div>
                <div class="details-buttons">
                    <button id="btn-cancel" type="reset" class="btn-gray">Cancel</button>
                    <button id="btn-submit" type="submit" class="btn-theme-s">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</section>
